{
  "name": "Yammer Enhancement Suite",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Makes Yams Even More Tasty",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Enhance the Yammer experience"
  },
  "icons": {
    "128": "images/Logo_128x128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.staging.yammer.com/*",
        "https://www.thunderdome.yammer.com/*",
        "https://www.yammer.com/*"
      ],
      "css": ["stylesheets/yammer.css"],
      "js": [
        "scripts/jquery.min.js", 
        "scripts/yammer.js",
        "scripts/groupstorage.js", 
        "scripts/group_pinner.js",
        "scripts/saveasdraft.js",
        "scripts/removegettingstarted.js"
      ]
    }
  ]
}